alias ping="ping -c4"
alias vi='/usr/bin/vim'
alias hcu='hhvm $(which composer) update --no-scripts'
alias hci='hhvm $(which composer) install --no-scripts'
alias phpunit='php -dzend_extension=xdebug.so $(which phpunit)'


##### Alias ssh Aramisauto
alias sshstaging='ssh vagrant@data.karbouin.staging.platforms.aramisauto.com'
alias sshfrontstaging='ssh vagrant@front.karbouin.staging.platforms.aramisauto.com'

tailf() {
    tail -f "$*" | ccze -A
}

chmoddir() {
    find "$*" -type d -exec chmod 755 {} +
}

chmodfile() {
    find "$*" -type f -exec chmod 644 {} +
}

