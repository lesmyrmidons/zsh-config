alias ping="ping -c4"
alias lyncpidgin="export NSS_SSL_CBC_RANDOM_IV=0 && pidgin  &"
alias vi='/usr/bin/vim'
alias hcu='hhvm /usr/local/bin/composer update'
alias hci='hhvm /usr/local/bin/composer install'

# Alias lafourchette
alias web1-core.preprod="ssh lafourchette@web1-core.preprod.lafourchette.typhon.net"
alias web2-core.preprod="ssh lafourchette@web2-core.preprod.lafourchette.typhon.net"

tailf() {
    tail -f "$*" | ccze -A
}

chmoddir() {
    find "$*" -type d -exec chmod 755 {} +
}

chmodfile() {
    find "$*" -type f -exec chmod 644 {} +
}
